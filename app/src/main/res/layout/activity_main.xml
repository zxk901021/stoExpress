<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey" >

    
    <com.zhy_9.stoexpress.view.TitleView
        android:id="@+id/saomiao_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <RelativeLayout 
        android:id="@+id/courier_info_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_below="@+id/saomiao_title"
        android:paddingBottom="20dp">
        
        <TextView 
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:text="快递员："/>
    <TextView 
        android:id="@+id/name_str"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="20dp"
        android:text="3000001|苗元"
        android:layout_toRightOf="@+id/name"
        android:layout_toEndOf="@+id/name"/>
    <TextView 
        android:id="@+id/phone_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/grey_text"
        android:textSize="14sp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:text="手 机 号："
        android:layout_below="@+id/name"/>
    <TextView 
        android:id="@+id/phone_number_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/grey_text"
         android:textSize="14sp"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="15dp"
        android:text="K56846616698"
        android:layout_toRightOf="@+id/name"
        android:layout_toEndOf="@+id/name"
        android:layout_below="@+id/phone_number"/>
    <TextView 
        android:id="@+id/equipment_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/grey_text"
         android:textSize="14sp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:text="设 备 ID:"
        android:layout_below="@+id/phone_number"/>
    <TextView 
        android:id="@+id/equipment_id_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/grey_text"
         android:textSize="14sp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="15dp"
        android:text="15126548926"
        android:layout_toRightOf="@+id/name"
        android:layout_below="@+id/name"/>
    <TextView 
        android:id="@+id/location_branch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/grey_text"
         android:textSize="14sp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:text="所在网点："
        android:layout_below="@+id/equipment_id"/>
    <TextView 
        android:id="@+id/location_branch_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/grey_text"
         android:textSize="14sp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="15dp"
        android:text="天津公司"
        android:layout_toRightOf="@+id/name"
        android:layout_below="@+id/equipment_id"/>
        
    </RelativeLayout>
    
    
    
    
    <LinearLayout 
        android:id="@+id/top_menu"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_below="@+id/courier_info_layout"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        
        <TextView 
            android:id="@+id/delivery"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="派件扫描"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:gravity="center_horizontal"
            android:drawableTop="@drawable/piepice_icon"
            android:background="@color/white"
            android:paddingTop="40dp"/>
        <TextView 
            android:id="@+id/problem_shipment"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="问题件"
             android:gravity="center_horizontal"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:drawableTop="@drawable/badpice_icon"
            android:background="@color/white"
            android:layout_marginLeft="1dp"
            android:paddingTop="40dp"/>
        <TextView 
            android:id="@+id/sign_for"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="签收扫描"
             android:gravity="center_horizontal"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:drawableTop="@drawable/signedpice_icon"
            android:background="@color/white"
            android:layout_marginLeft="1dp"
            android:paddingTop="40dp"/>
        
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_below="@+id/top_menu"
        android:orientation="horizontal"
        android:layout_marginTop="1dp">
        
        <TextView 
            android:id="@+id/scan_record"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="扫描记录"
             android:gravity="center_horizontal"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:drawableTop="@drawable/record_icon"
            android:background="@color/white"
            android:paddingTop="40dp"/>
        <TextView 
            android:id="@+id/upload_data"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="数据上传"
            android:gravity="center_horizontal"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:drawableTop="@drawable/upload_icon"
            android:background="@color/white"
            android:layout_marginLeft="1dp"
            android:paddingTop="40dp"/>
        <TextView 
            android:layout_width="0dp"
            android:layout_height="match_parent"
             android:gravity="center_horizontal|center_vertical"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:drawableTop="@drawable/ic_launcher"
            android:visibility="invisible"/>
        
    </LinearLayout>
        
    

</RelativeLayout>
