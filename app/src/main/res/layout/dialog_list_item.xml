<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingBottom="5dp"
    android:paddingTop="5dp" >

    <ImageView
        android:id="@+id/dialog_item_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:src="@drawable/select_edit_identity"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/dialog_item_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/dialog_item_select"
        android:layout_toRightOf="@+id/dialog_item_select"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp" />

    <ImageView
        android:id="@+id/dialog_item_delete"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/e3_signtype_del"
        android:padding="10dp"
        tools:ignore="ContentDescription"
        android:layout_alignParentRight="true" />

</RelativeLayout>